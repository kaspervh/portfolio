<p id="notice"><%= notice %></p>

<h1><%= @project_type.name%> projekter</h1>
<br>
<br>

<% @project_type.projects.each do |project| %>
  <div class="projectbox" style='min-height: 220px; width: 100%; margin: 5px;'>
    <strong><%= project.name %></strong>
    <br>
    <br>
    <%= image_tag(project.image.url, style: "height: 200px; float:left")%>
    <br>
    <br>
    <p><%= project.description %></p>
    <br>
  </div>
  <% @links.where(project_id: project.id).each do |link|%>
      <%= link_to link.name, link.link style='float: left;'%>
  <%end%>

  <br>
<%end%>
